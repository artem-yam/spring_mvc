<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.epam.jtc.spring.datalayer.dto.BooksEntity" table="BOOKS"
           schema="SYSTEM">
        <id name="id">
            <column name="ID" sql-type="number(*)" precision="2147483646"/>
        </id>
        <property name="title">
            <column name="TITLE" sql-type="varchar2(50)" length="50"/>
        </property>
        <property name="author">
            <column name="AUTHOR" sql-type="varchar2(50)" length="50"/>
        </property>
        <property name="image">
            <column name="IMAGE" sql-type="blob" not-null="true"/>
        </property>
        <property name="rating">
            <column name="RATING" sql-type="number(*)" precision="2147483646"
                    not-null="true"/>
        </property>
        <property name="isDeleted">
            <column name="IS_DELETED" sql-type="number(1)" precision="1"
                    not-null="true"/>
        </property>
    </class>
</hibernate-mapping>